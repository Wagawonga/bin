#!/bin/bash

# Das Skript ist auf Debian ausgelegt!!!

if [ "$(whoami)" != "root" ]; then
	echo
    echo "DAS SKRIPT MUSS MIT ROOT RECHTEN AUSGEFUEHRT WERDEN!!!"
    echo "ABBRUCH"
    echo
	exit 1
fi

#Sytem auf neusten Stand bringen:
apt-get update
apt-get upgrade

#Git einrichten:
apt-get -y install git
git config --global include.path "~/dotfiles/_gitconfig"
git config --global user.name "Daniel"
git config --global user.email "none"

#Github persönliche Files runterladen:
git clone https://github.com/Wagawonga/Linux-Vimfiles.git ~/dotfiles
git clone https://github.com/Wagawonga/bin.git ~/bin

#vim einreichten:
apt-get -y install vim
echo 'source ~/dotfiles/_vimrc.vim' > ~/.vimrc
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
vim +'colorsheme default' +PluginInstall +qall

#zu .bashrc hinzufügen
apt-get -y install acpi   #Fuer die Anzeige des Akkustands in PS1.
apt-get -y install tmux
RCLINE='source ~/dotfiles/_bashrc'
if ! cat ~/.bashrc | grep -q "$RCLINE" ;then
    echo $RCLINE >> ~/.bashrc 
fi
unset RCLINE

